<div class="row" id="loginForm">
    <section>
        @using (Html.BeginForm("BankIDLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label col-md-2">Personnummer: </label>
                <div class="col-md-10">
                    <input class="form-control" type="text" name="ssn" id="ssn" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Typ av BankID</label>
                <div class="col-md-10">
                    <select name="type" class="form-control">
                        <option>Mobilt</option>
                        <option>Den här enheten</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Logga in" class="btn btn-primary btn-primary-small" id="login" onsubmit="hide" />
                </div>
            </div>
        }
    </section>
</div>