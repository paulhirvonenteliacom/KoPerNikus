@model Sjuklöner.Models.Assistant

@{
    ViewBag.Title = "Delete";
}
<div class="row index-page-margin">
    <p class="col col-md-2"></p>
    <p class="page-header8 col col-md-10">Ta bort assistenten</p>
    <nl class="col-small-left-padding col col-md-offset-2 font-size-16">Klicka på "Bekräfta" nedan för att ta bort denna assistent</nl>
</div>
<hr class="claim-divider" />

<div>
    <div class="row">
        @Html.LabelFor(m => m.CareCompany.CompanyName, new { @class = "col-md-2 display-right-align control-label" })
        <div class="col-small-left-padding col-md-10">
            @Html.DisplayFor(model => model.CareCompany.CompanyName)
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 display-right-align control-label" })
        <div class="col-small-left-padding col-md-10">
            @Html.DisplayFor(model => model.FirstName)
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 display-right-align control-label" })
        <div class="col-small-left-padding col-md-10">
            @Html.DisplayFor(model => model.LastName)
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(m => m.AssistantSSN, new { @class = "col-md-2 display-right-align control-label" })
        <div class="col-small-left-padding col-md-10">
            @Html.DisplayFor(model => model.AssistantSSN)
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 display-right-align control-label" })
        <div class="col-small-left-padding col-md-10">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 display-right-align control-label" })
        <div class="col-small-left-padding col-md-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(m => m.HourlySalary, new { @class = "col-md-2 display-right-align control-label" })
        <div class="col-small-left-padding col-md-10">
            @Html.DisplayFor(model => model.HourlySalary)
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(m => m.HolidayPayRate, new { @class = "col-md-2 display-right-align control-label" })
        <div class="col-small-left-padding col-md-10">
            @Html.DisplayFor(model => model.HolidayPayRate)
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(m => m.PayrollTaxRate, new { @class = "col-md-2 display-right-align control-label" })
        <div class="col-small-left-padding col-md-10">
            @Html.DisplayFor(model => model.PayrollTaxRate)
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(m => m.PensionAndInsuranceRate, new { @class = "col-md-2 display-right-align control-label" })
        <div class="col-small-left-padding col-md-10">
            @Html.DisplayFor(model => model.PensionAndInsuranceRate)
        </div>
    </div>

    @using (Html.BeginForm("Delete", "Assistants", new { id = Model.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="no-padding-left2 col col-md-offset-2 col-md-1">
                <input type="submit" value="Bekräfta" name="submitButton" class="btn btn-danger btn-danger-small" id="confirm" />
            </div>
            <div class="no-padding-left2 col col-md-1">
                <input class="btn btn-secondary btn-secondary-small" type="submit" name="submitButton" value="Avbryt" id="cancel" />
            </div>
        </div>       
    }
</div>

