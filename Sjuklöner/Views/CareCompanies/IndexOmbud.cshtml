@model Sjuklöner.Viewmodels.OmbudIndexVM
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <p class="page-header5 col col-md-12">Ombudlista</p>
</div>
@for (int i = 0; i < Model.OmbudForVMList.Count(); i++)
{
    @Html.HiddenFor(model => model.OmbudForVMList[i].Id)
}
<div class="row">
    <div class="form-group">
        <div class="col-md-6 bold-36">
            @Html.DisplayFor(model => model.CareCompanyName, null, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="col col-md-6">
    </div>
</div>
<div class="row">
    <div class="col col-md-1">
        @Html.ActionLink("Nytt ombud", "Create", null, new { @class = "btn btn-primary btn-primary3" })
    </div>
</div>
<br />
<hr class="claim-divider" />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OmbudForVMList[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OmbudForVMList[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OmbudForVMList[0].SSN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OmbudForVMList[0].Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OmbudForVMList[0].PhoneNumber)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.OmbudForVMList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SSN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Uppdatera", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
