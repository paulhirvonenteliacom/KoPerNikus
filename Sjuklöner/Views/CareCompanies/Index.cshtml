@model Sjuklöner.Viewmodels.CareCompanyIndexVM
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <p class="page-header5 col col-md-12">Lista över alla Assistansbolag</p>
</div>
<br />
<div class="row">
    <div class="col col-md-1">
        @Html.ActionLink("Nytt bolag", "Create", null, new { @class = "btn btn-primary btn-primary3" })
    </div>
</div>
<br />
@if (!Model.CareCompanyList.Any())
{
    <div class="left-margin-23 display-large-font">
        Det finns inga assistansbolag.
    </div>
    <br />
}
else
{
    <hr class="claim-divider" />
    <br />
    <table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CareCompanyList[0].CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CareCompanyList[0].OrganisationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CareCompanyList[0].StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CareCompanyList[0].Postcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CareCompanyList[0].City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CareCompanyList[0].AccountNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CareCompanyList[0].CompanyPhoneNumber)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.CareCompanyList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganisationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyPhoneNumber)
            </td>
            @if (Model.UserList.Where(u => u.CareCompanyId == item.Id).Any())
            {
                <td>
                    @Html.ActionLink("Uppdatera", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Uppdatera", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
                </td>
            }
        </tr>
    }
</table>
}
<div class="row row-padding2">
    <div class="col-left-margin-6 col col-md-2">
        @Html.ActionLink("Tillbaka", "Index", "Home", null, new { @class = "btn btn-primary btn-primary-small" })
    </div>
</div>

