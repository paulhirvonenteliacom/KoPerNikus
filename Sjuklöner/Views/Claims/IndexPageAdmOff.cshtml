@model Sjuklöner.Viewmodels.IndexPageAdmOffVM

@{
    ViewBag.Title = "Index";
}
<body>
    <div class="row index-page-margin">
        @*<p class="col col-md-2"></p>*@
        <p class="page-header col col-md-10">Ansökningar</p>
        @using (Html.BeginForm("IndexPageAdmOff", "Claims", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <select name="searchBy" class="col-md-2 input-sm">
                <option value="Referensnummer">Referensnummer</option>
                <option value="CSSN">Kundens Personnummer</option>
                <option value="ASSN">Assistentens Personnummer</option>
            </select>
            <input type="text" name="searchString" id="searchString" class="col-md-2" input-sm />
            <input type="submit" />
        }
        @*<nl class="col col-md-offset-2 font-size-12">Vård- och omsorgsförvaltningen i Helsingborgs kommun</nl>*@
    </div>
    <br />
    <br />
    <hr class="claim-divider" />
    <div class="row">
        <div class="col">
            <div class="second-page-header">
                Inkorg
            </div>
            @if (Model.InInboxClaims?.Count() > 0)
            {
                <table class="table">
                    <tr>
                        <th class="small-col">
                            Referensnummer
                        </th>
                        <th class="small-col">
                            Inkommen datum
                        </th>
                        <th class="small-col">
                            Assistansbolag
                        </th>
                        <th class="small-col">
                            Assistentens personnummer
                        </th>
                        <th class="small-col">
                            Kundens personnummer
                        </th>
                        <th class="small-col">
                            Första sjukdag
                        </th>
                        <th class="small-col">
                            Sista sjukdag
                        </th>
                        <th class="small-col">
                            Antal sjukdagar
                        </th>
                        <th class="medium-col">
                            Yrkat belopp (Kr)
                        </th>
                        @*<th></th>*@
                    </tr>

                    @foreach (var item in Model.InInboxClaims)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.ReferenceNumber, "Recommend", "Claims", new { id = item.Id }, new { @class = "btn btn-primary btn-primary-small" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StatusDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CareCompany.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegAssistantSSN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerSSN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QualifyingDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastDayOfSicknessDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumberOfSickDays)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClaimedSum)
                            </td>
                            @*<td>
                                    @Html.ActionLink("Uppdatera", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id })
                                    @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
                                </td>*@
                        </tr>
                    }

                </table>
            }
            else
            {
                <div class="left-margin-23 font-size-16">
                    Det finns inga ansökningar i inkorgen.
                </div>
                <br />
            }
        </div>
    </div>

    <hr class="claim-divider" />
    <div class="row">
        <div class="col">
            <div class="second-page-header">
                Under bearbetning
            </div>
            @if (Model.UnderReviewClaims?.Count() > 0)
            {
                <table class="table">
                    <tr>
                        <th class="small-col">
                            Referensnummer
                        </th>
                        <th class="small-col">
                            Inkommen datum
                        </th>
                        <th class="small-col">
                            Assistansbolag
                        </th>
                        <th class="small-col">
                            Assistentens personnummer
                        </th>
                        <th class="small-col">
                            Kundens personnummer
                        </th>
                        <th class="small-col">
                            Första sjukdag
                        </th>
                        <th class="small-col">
                            Sista sjukdag
                        </th>
                        <th class="small-col">
                            Antal sjukdagar
                        </th>
                        <th class="medium-col">
                            Yrkat belopp (Kr)
                        </th>
                        @*<th></th>*@
                    </tr>

                    @foreach (var item in Model.UnderReviewClaims)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.ReferenceNumber, "Recommend", "Claims", new { id = item.Id }, new { @class = "btn btn-primary btn-primary-small" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StatusDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CareCompany.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegAssistantSSN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerSSN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QualifyingDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastDayOfSicknessDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumberOfSickDays)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClaimedSum)
                            </td>
                            @*<td>
                                    @Html.ActionLink("Uppdatera", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id })
                                    @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
                                </td>*@
                        </tr>
                    }

                </table>
            }
            else
            {
                <div class="left-margin-23 font-size-16">
                    Det finns inga ansökningar under bearbetning.
                </div>
                <br />
            }
        </div>
    </div>

    <hr class="claim-divider" />
    <div class="row">
        <div class="col">
            <div class="second-page-header">
                Beslutade
            </div>
            @if (Model.DecidedClaims?.Count() > 0)
            {
                <table class="table">
                    <tr>
                        <th class="small-col">
                            Referensnummer
                        </th>
                        <th class="small-col">
                            Beslutsdatum
                        </th>
                        <th class="small-col">
                            Assistansbolag
                        </th>
                        <th class="small-col">
                            Assistentens personnummer
                        </th>
                        <th class="small-col">
                            Kundens personnummer
                        </th>
                        <th class="small-col">
                            Första sjukdag
                        </th>
                        <th class="small-col">
                            Sista sjukdag
                        </th>
                        <th class="small-col">
                            Antal sjukdagar
                        </th>
                        <th class="medium-col">
                            Yrkat belopp (Kr)
                        </th>
                        <th class="small-col">
                            Godkänt belopp (Kr)
                        </th>
                        <th class="medium-col">
                            Avslaget belopp (Kr)
                        </th>
                        @*<th></th>*@
                    </tr>

                    @foreach (var item in Model.DecidedClaims)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.ReferenceNumber, "Recommend", "Claims", new { id = item.Id }, new { @class = "btn btn-primary btn-primary-small" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StatusDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CareCompany.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegAssistantSSN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerSSN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QualifyingDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastDayOfSicknessDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumberOfSickDays)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClaimedSum)
                            </td>
                            <td class="highlight-green-bold">
                                @Html.DisplayFor(modelItem => item.ApprovedSum)
                            </td>
                            <td class="highlight-red-bold">
                                @Html.DisplayFor(modelItem => item.RejectedSum)
                            </td>
                            @*<td>
                                    @Html.ActionLink("Uppdatera", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
                                </td>*@
                        </tr>
                    }

                </table>
            }
            else
            {
                <div class="left-margin-23 font-size-16">
                    Det finns inga beslutade ansökningar.
                </div>
                <br />
            }
        </div>
    </div>
    <hr class="claim-divider" />


</body>
