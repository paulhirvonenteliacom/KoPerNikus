    //This function finds the subIndex based on index of element, number of calendar days and number of sub assistants
    function findSubIdx(index, numberOfCalendarDays, numberOfSubAssistants) {
        var subCounter = 0;
        var subIdx = 0;
        var startIdx = 0;
        var stopIdx = numberOfCalendarDays - 1;
        var subFound = false;
        while (!subFound) {
            if (index >= startIdx && index <= stopIdx) {
                subIdx = subCounter;
                subFound = true;
            }
            else {
                startIdx = stopIdx + 1;
                stopIdx = startIdx + numberOfCalendarDays - 1;
                subCounter++;
            }
        }
        return subIdx;
    }

    //Check if there is at least one 5 day gap in the regular assistant's hours. It is not allowed. A new claim needs to be written in that case.
