@model Sjuklöner.Viewmodels.ClaimDetailsOmbudVM

@{
    ViewBag.Title = "ClaimDetailsPdf";
}

<body>
    <div class="row">
        <p class="col col-md-offset-2 page-header9">Ansökan</p>
    </div>
    <div class="row">
        <p class="col col-md-offset-2 display-padding bold-14">Referensnummer: @Model.ReferenceNumber</p>
    </div>
    <div class="row">
        @if ((User.IsInRole("Ombud") && @Model.StatusName == "Inkorgen") || (User.IsInRole("Ombud") && @Model.StatusName == "Under handläggning"))
        {
            <p class="col col-md-offset-2 display-padding bold-14">Status: Under handläggning</p>
        }
        else if (User.IsInRole("Ombud"))
        {
            <p class="col col-md-offset-2 display-padding bold-14">Status: @Model.StatusName, steg @Model.CompletionStage</p>
        }
        else if (User.IsInRole("AdministrativeOfficial") || User.IsInRole("Admin"))
        {
            <p class="col col-md-offset-2 display-padding bold-14">Status: @Model.StatusName</p>
        }
    </div>
    <div class="form-horizontal">

        @if (Model.CompletionStage >= 1)
        {
            <div class="row">
                <div class="col col-md-2">
                </div>
                <div class="col col-md-9 form-group-div-frame">
                    <div class="row form-group-heading">
                        Kommun
                    </div>

                    <table class="table2">
                        <tr>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.Council)
                            </th>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.Administration)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.Council)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Administration)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col col-md-2">
                </div>
                <div class="col col-md-9 form-group-div-frame">
                    <div class="row form-group-heading">
                        Assistansberättigad
                    </div>
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-threecol row-divider">
                                @Html.LabelFor(model => model.CustomerName)
                            </th>
                            <th class="claimpdf-threecol row-divider">
                                @Html.LabelFor(model => model.CustomerSSN)
                            </th>
                            <th class="claimpdf-threecol row-divider">
                                @Html.LabelFor(model => model.CustomerPhoneNumber)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.CustomerSSN)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.CustomerPhoneNumber)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col col-md-2">
                </div>
                <div class="col col-md-9 form-group-div-frame">
                    <div class="row form-group-heading">
                        Ombud/uppgiftslämnare
                    </div>
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.OmbudName)
                            </th>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.OmbudPhoneNumber)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.OmbudName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.OmbudPhoneNumber)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col col-md-2">
                </div>
                <div class="col col-md-9 form-group-div-frame">
                    <div class="row form-group-heading">
                        Assistansanordnare
                    </div>
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-threecol row-divider">
                                @Html.LabelFor(model => model.CompanyName)
                            </th>
                            <th class="claimpdf-threecol row-divider">
                                @Html.LabelFor(model => model.OrganisationNumber)
                            </th>
                            <th class="claimpdf-threecol row-divider">
                                @Html.LabelFor(model => model.CompanyAddress)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.OrganisationNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.CompanyAddress)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-threecol row-divider">
                                @Html.LabelFor(model => model.CompanyPhoneNumber)
                            </th>
                            <th class="claimpdf-threecol row-divider">
                                @Html.LabelFor(model => model.GiroNumber)
                            </th>
                            <th class="claimpdf-threecol row-divider">
                                @Html.LabelFor(model => model.CollectiveAgreement)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.CompanyPhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.GiroNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.CollectiveAgreement)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col col-md-2">
                </div>
                <div class="col col-md-9 form-group-div-frame">
                    <div class="row form-group-heading">
                        Insjuknad ordinarie assistent
                    </div>
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.RegAssistantName)
                            </th>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.RegAssistantSSN)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.RegAssistantName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.RegAssistantSSN)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.RegPhoneNumber)
                            </th>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.RegEmail)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.RegPhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.RegEmail)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.QualifyingDayDate)
                            </th>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.LastDayOfSicknessDate)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.QualifyingDayDate)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.LastDayOfSicknessDate)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.SickPayRateAsString)
                            </th>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.HolidayPayRateAsString)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.SickPayRateAsString)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.HolidayPayRateAsString)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.SocialFeeRateAsString)
                            </th>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.PensionAndInsuranceRateAsString)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.SocialFeeRateAsString)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.PensionAndInsuranceRateAsString)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-col row-divider">
                                @Html.LabelFor(model => model.HourlySalaryAsString)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.HourlySalaryAsString)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col col-md-2">
                </div>
                <div class="col col-md-9 form-group-div-frame">
                    @if (Model.NumberOfSubAssistants == 1)
                    {
                        <div class="row form-group-heading">
                            Vikarierande assistent
                        </div>
                    }
                    else
                    {
                        <div class="row form-group-heading">
                            Vikarierande assistent 1
                        </div>
                    }
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.SubAssistantName)
                            </th>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.SubAssistantSSN)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.SubAssistantName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.SubAssistantSSN)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.SubPhoneNumber)
                            </th>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.SubEmail)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.SubPhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.SubEmail)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            if (Model.NumberOfSubAssistants > 1)
            {
                for (int i = 0; i < Model.NumberOfSubAssistants - 1; i++)
                {
                    <div class="row">
                        <div class="col col-md-2">
                        </div>
                        <div class="col col-md-9 form-group-div-frame">
                            <div class="row form-group-heading">
                                Vikarierande assistent @(i + 2)
                            </div>
                            <table class="table2">
                                <tr>
                                    <th class="claimpdf-twocol row-divider">
                                        Namn:
                                        @*@Html.LabelFor(model => model.SubstituteAssistantName[i])*@
                                    </th>
                                    <th class="claimpdf-twocol row-divider">
                                        Personnummer:
                                        @*@Html.LabelFor(model => model.SubstituteAssistantSSN[i])*@
                                    </th>
                                </tr>
                                <tr row-divider>
                                    <td>
                                        @Html.DisplayFor(m => m.SubstituteAssistantName[i])
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => m.SubstituteAssistantSSN[i])
                                    </td>
                                </tr>
                            </table>
                            <br />
                            <table class="table2">
                                <tr>
                                    <th class="claimpdf-twocol row-divider">
                                        Telefonnummer (inkl. riktnr.):
                                        @*@Html.LabelFor(model => model.SubstituteAssistantPhoneNumber[i])*@
                                    </th>
                                    <th class="claimpdf-twocol row-divider">
                                        E-postadress:
                                        @*@Html.LabelFor(model => model.SubstituteAssistantEmail[i])*@
                                    </th>
                                </tr>
                                <tr row-divider>
                                    <td>
                                        @Html.DisplayFor(m => m.SubstituteAssistantPhoneNumber[i])
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => m.SubstituteAssistantEmail[i])
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                }
            }
        }
        @if (Model.CompletionStage >= 2)
        {
            <div class="row">
                <div class="col col-md-2">
                </div>
                <div class="col col-md-9 form-group-div-frame">
                    <div class="row form-group-heading">
                        Antal timmar, ordinarie assistent
                    </div>
                    <div class="row">
                        <div class="col col-md-5">
                            <div class="form-group line-height-12">
                                <div class="row display-padding">
                                    @Model.RegAssistantSSN, @Model.RegAssistantName
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-md-5">
                            <div class="form-group line-height-12">
                                <div class="row label-padding">
                                    @Html.LabelFor(model => model.NumberOfAbsenceHours, htmlAttributes: new { @class = "control-label-left-align col-md-12" })
                                </div>
                                <div class="row display-padding">
                                    @Html.DisplayFor(m => m.NumberOfAbsenceHours)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-md-5">
                            <div class="form-group line-height-12">
                                <div class="row label-padding">
                                    @Html.LabelFor(model => model.NumberOfUnsocialHours, htmlAttributes: new { @class = "control-label-left-align col-md-12" })
                                </div>
                                <div class="row display-padding">
                                    @Html.DisplayFor(m => m.NumberOfUnsocialHours)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-md-5">
                            <div class="form-group line-height-12">
                                <div class="row label-padding">
                                    @Html.LabelFor(model => model.NumberOfOnCallHours, htmlAttributes: new { @class = "control-label-left-align col-md-12" })
                                </div>
                                <div class="row display-padding">
                                    @Html.DisplayFor(m => m.NumberOfOnCallHours)
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-manycol row-divider">
                                Datum
                            </th>
                            <th class="claimpdf-manycol row-divider">
                                Arbetade timmar
                            </th>
                            <th class="claimpdf-manycol row-divider">
                                Varav OB, kväll
                            </th>
                            <th class="claimpdf-manycol row-divider">
                                Varav OB, natt
                            </th>
                            <th class="claimpdf-manycol row-divider">
                                Varav OB, helg
                            </th>
                            <th class="claimpdf-manycol row-divider">
                                Varav OB, storhelg
                            </th>
                            <th class="claimpdf-manycol row-divider">
                                Jour, dag
                            </th>
                            <th class="claimpdf-manycol row-divider">
                                Jour, natt/helg
                            </th>
                            <th></th>
                        </tr>
                        @for (int i = 0; i < Model.NumberOfSickDays; i++)
                        {
                            <tr row-divider>
                                <td>
                                    @Html.DisplayFor(m => m.ClaimDays[i].DateString)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => m.ClaimDays[i].Hours)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => m.ClaimDays[i].UnsocialEvening)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => m.ClaimDays[i].UnsocialNight)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => m.ClaimDays[i].UnsocialWeekend)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => m.ClaimDays[i].UnsocialGrandWeekend)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => m.ClaimDays[i].OnCallDay)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => m.ClaimDays[i].OnCallNight)
                                </td>
                            </tr>
                        }
                    </table>

                </div>
            </div>

            for (int k = 0; k < Model.NumberOfSubAssistants; k++)
            {
                <div class="row">
                    <div class="col col-md-2">
                    </div>
                    <div class="col col-md-9 form-group-div-frame">
                        @if (k == 0)
                        {
                            if (Model.NumberOfSubAssistants == 1)
                            {
                                <div class="row form-group-heading">
                                    Antal timmar, vikarierande assistent
                                </div>
                            }
                            else
                            {
                                <div class="row form-group-heading">
                                    Antal timmar, vikarierande assistent 1
                                </div>
                            }
                            <div class="row">
                                <div class="col col-md-5">
                                    <div class="form-group line-height-12">
                                        <div class="row display-padding">
                                            @Model.SubAssistantSSN, @Model.SubAssistantName
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row form-group-heading">
                                Antal timmar, vikarierande assistent @(k + 1)
                            </div>
                            <div class="row">
                                <div class="col col-md-5">
                                    <div class="form-group line-height-12">
                                        <div class="row display-padding">
                                            @Model.SubstituteAssistantSSN[k - 1], @Model.SubstituteAssistantName[k - 1]
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="row">
                            <div class="col col-md-5">
                                <div class="form-group line-height-12">
                                    <div class="row label-padding">
                                        @Html.LabelFor(model => model.NumberOfHoursWithSI, htmlAttributes: new { @class = "control-label-left-align col-md-12" })
                                    </div>
                                    <div class="row display-padding">
                                        @Html.DisplayFor(m => m.HoursWithSI[k])
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-md-5">
                                <div class="form-group line-height-12">
                                    <div class="row label-padding">
                                        @Html.LabelFor(model => model.NumberOfUnsocialHoursSI, htmlAttributes: new { @class = "control-label-left-align col-md-12" })
                                    </div>
                                    <div class="row display-padding">
                                        @Html.DisplayFor(m => m.UnsocialHoursSI[k])
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-md-5">
                                <div class="form-group line-height-12">
                                    <div class="row label-padding">
                                        @Html.LabelFor(model => model.NumberOfOnCallHoursSI, htmlAttributes: new { @class = "control-label-left-align col-md-12" })
                                    </div>
                                    <div class="row display-padding">
                                        @Html.DisplayFor(m => m.OnCallHoursSI[k])
                                    </div>
                                </div>
                            </div>
                        </div>

                        <table class="table2">
                            <tr>
                                <th class="claimpdf-manycol row-divider">
                                    Datum
                                </th>
                                <th class="claimpdf-manycol row-divider">
                                    Arbetade timmar
                                </th>
                                <th class="claimpdf-manycol row-divider">
                                    Varav OB, kväll
                                </th>
                                <th class="claimpdf-manycol row-divider">
                                    Varav OB, natt
                                </th>
                                <th class="claimpdf-manycol row-divider">
                                    Varav OB, helg
                                </th>
                                <th class="claimpdf-manycol row-divider">
                                    Varav OB, storhelg
                                </th>
                                <th class="claimpdf-manycol row-divider">
                                    Jour, dag
                                </th>
                                <th class="claimpdf-manycol row-divider">
                                    Jour, natt/helg
                                </th>
                                <th></th>
                            </tr>

                            @for (int i = 0; i < Model.NumberOfSickDays; i++)
                            {
                                <tr row-divider>
                                    <td>
                                        @Html.DisplayFor(m => m.ClaimDays[i].DateString)
                                    </td>
                                    <td>
                                        @Model.HoursSIPerSubAndDay[k, i]
                                    </td>
                                    <td>
                                        @Model.UnsocialEveningSIPerSubAndDay[k, i]
                                    </td>
                                    <td>
                                        @Model.UnsocialNightSIPerSubAndDay[k, i]
                                    </td>
                                    <td>
                                        @Model.UnsocialWeekendSIPerSubAndDay[k, i]
                                    </td>
                                    <td>
                                        @Model.UnsocialGrandWeekendSIPerSubAndDay[k, i]
                                    </td>
                                    <td>
                                        @Model.OnCallDaySIPerSubAndDay[k, i]
                                    </td>
                                    <td>
                                        @Model.OnCallNightSIPerSubAndDay[k, i]
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            }

        }


        @if (Model.CompletionStage >= 3)
        {
            <div class="row">
                <div class="col col-md-2">
                </div>
                <div class="col col-md-9 form-group-div-frame">
                    <div class="row form-group-heading">
                        Yrkade belopp
                    </div>
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.Sickpay)
                            </th>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.HolidayPay)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.Sickpay)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.HolidayPay)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table2">
                        <tr>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.SocialFees)
                            </th>
                            <th class="claimpdf-twocol row-divider">
                                @Html.LabelFor(model => model.PensionAndInsurance)
                            </th>
                        </tr>
                        <tr row-divider>
                            <td>
                                @Html.DisplayFor(model => model.SocialFees)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.PensionAndInsurance)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <div class="row">
                        <div class="col col-md-5">
                            <div class="form-group line-height-12">
                                <div class="row label-padding">
                                    @Html.LabelFor(model => model.ClaimSum, htmlAttributes: new { @class = "control-label-left-align control-label-large col-md-12" })
                                </div>
                                <div class="row display-padding">
                                    @Html.DisplayFor(m => m.ClaimSum)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
